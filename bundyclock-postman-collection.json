{
  "info": {
    "_postman_id": "bundyclock-api-v1",
    "name": "BundyClock API",
    "description": "Skeleton Postman collection for the BundyClock time attendance system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8080", "type": "string" },
    { "key": "face_url", "value": "http://localhost:5001", "type": "string" },
    { "key": "token", "value": "", "type": "string" },
    { "key": "employee_id", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "POST Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const json = pm.response.json();",
                  "if (json.data && json.data.token) {",
                  "  pm.collectionVariables.set('token', json.data.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Employees",
      "item": [
        {
          "name": "GET All Employees",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{base_url}}/api/employees",
              "host": ["{{base_url}}"],
              "path": ["api", "employees"]
            }
          }
        },
        {
          "name": "GET Employee by ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{base_url}}/api/employees/{{employee_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "employees", "{{employee_id}}"]
            }
          }
        },
        {
          "name": "POST Create Employee",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Juan dela Cruz\",\n  \"employeeCode\": \"EMP-010\",\n  \"department\": \"Engineering\",\n  \"email\": \"juan@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/employees",
              "host": ["{{base_url}}"],
              "path": ["api", "employees"]
            }
          }
        },
        {
          "name": "PUT Update Employee",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Juan dela Cruz Updated\",\n  \"department\": \"Management\",\n  \"email\": \"juan.updated@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/employees/{{employee_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "employees", "{{employee_id}}"]
            }
          }
        },
        {
          "name": "DELETE Employee",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{base_url}}/api/employees/{{employee_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "employees", "{{employee_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Attendance",
      "item": [
        {
          "name": "POST Time In",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "image", "type": "file", "src": [] }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/attendance/time-in?employeeId={{employee_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance", "time-in"],
              "query": [{ "key": "employeeId", "value": "{{employee_id}}" }]
            }
          }
        },
        {
          "name": "POST Time Out",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "image", "type": "file", "src": [] }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/attendance/time-out?employeeId={{employee_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance", "time-out"],
              "query": [{ "key": "employeeId", "value": "{{employee_id}}" }]
            }
          }
        },
        {
          "name": "GET All Attendance Logs",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{base_url}}/api/attendance",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance"]
            }
          }
        },
        {
          "name": "GET Logs by Employee",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{base_url}}/api/attendance/employee/{{employee_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "attendance", "employee", "{{employee_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Face Recognition",
      "item": [
        {
          "name": "POST Verify Face (Spring Boot proxy)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "image", "type": "file", "src": [] }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/face/verify",
              "host": ["{{base_url}}"],
              "path": ["api", "face", "verify"]
            }
          }
        },
        {
          "name": "POST Register Face (Spring Boot proxy)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "image", "type": "file", "src": [] }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/face/register?employeeId={{employee_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "face", "register"],
              "query": [{ "key": "employeeId", "value": "{{employee_id}}" }]
            }
          }
        },
        {
          "name": "POST Verify Face (Direct to face-svc)",
          "request": {
            "method": "POST",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "image", "type": "file", "src": [] }
              ]
            },
            "url": {
              "raw": "{{face_url}}/verify-face",
              "host": ["{{face_url}}"],
              "path": ["verify-face"]
            }
          }
        },
        {
          "name": "POST Register Face (Direct to face-svc)",
          "request": {
            "method": "POST",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "employee_id", "value": "{{employee_id}}", "type": "text" },
                { "key": "image", "type": "file", "src": [] }
              ]
            },
            "url": {
              "raw": "{{face_url}}/register-face",
              "host": ["{{face_url}}"],
              "path": ["register-face"]
            }
          }
        },
        {
          "name": "GET Face Service Health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{face_url}}/health",
              "host": ["{{face_url}}"],
              "path": ["health"]
            }
          }
        }
      ]
    }
  ]
}
