#
# Gradle start up script for POSIX compatible shells (sh, dash, ksh, zsh, bash)
# Used by Git Bash on Windows as well.

APP_NAME="Gradle"
APP_BASE_NAME=$(basename "$0")

# Resolve links: $0 may be a link
PRG="$0"
while [ -h "$PRG" ]; do
  ls=$(ls -ld "$PRG")
  link=$(expr "$ls" : '.*-> \(.*\)$')
  if expr "$link" : '/.*' > /dev/null; then PRG="$link"; else PRG=$(dirname "$PRG")/"$link"; fi
done
SAVED=$(pwd)
cd "$(dirname "$PRG")" > /dev/null
APP_HOME=$(pwd -P)
cd "$SAVED" > /dev/null

CLASSPATH=$APP_HOME/gradle/wrapper/gradle-wrapper.jar

# OS specific support
cygwin=false
msys=false
darwin=false
nonstop=false
case "$(uname)" in
  CYGWIN*) cygwin=true ;;
  Darwin*) darwin=true ;;
  MSYS* | MINGW*) msys=true ;;
  NONSTOP*) nonstop=true ;;
esac

JAVACMD=java
if [ -n "$JAVA_HOME" ]; then
  if [ -x "$JAVA_HOME/jre/sh/java" ]; then
    JAVACMD=$JAVA_HOME/jre/sh/java
  else
    JAVACMD=$JAVA_HOME/bin/java
  fi
fi

if [ ! -x "$CLASSPATH" ]; then
  echo ""
  echo "ERROR: gradle-wrapper.jar not found."
  echo ""
  echo "To generate the Gradle wrapper, run ONE of:"
  echo "  1) If Gradle is installed globally:  gradle wrapper"
  echo "  2) Use the setup script:             bash ../setup.sh"
  echo "  3) Download manually from:           https://services.gradle.org/distributions/"
  echo ""
  exit 1
fi

exec "$JAVACMD" \
  -classpath "$CLASSPATH" \
  org.gradle.wrapper.GradleWrapperMain \
  "$@"
